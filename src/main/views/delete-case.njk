{% extends "template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block content %}

  {{ govukBackLink
    ({
      text: "Back",
      href: "/"
    }) }}

  <h1 class="govuk-heading-xl">Are you sure you want to delete this case?</h1>

  {{ govukSummaryList({
    rows: [
      {
        key: {
        text: "ID"
      },
        value: {
        text: case.id
      }
      },
      {
        key: {
        text: "Case Number"
      },
        value: {
        text: case.caseNumber
      }
      },
      {
        key: {
        text: "Title"
      },
        value: {
        html: case.title
      }
      },
      {
        key: {
        text: "Description"
      },
        value: {
        html: case.description
      }
      },
      {
        key: {
        text: "Created Date"
      },
        value: {
        html: dateToFormat(case.createdDate)
      }
      }
    ]
  }) }}

  <div class="govuk-button-group">
    {{ govukButton
      ({
        text: "Delete case",
        href: "/delete/" + case.id,
        method: "DELETE",
        classes: "govuk-button--warning"
      }) }}

    <a class="govuk-link" href="/">Cancel</a>
  </div>

{% endblock %}
